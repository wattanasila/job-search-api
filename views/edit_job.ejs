<%- include('partials/header') %>
<h1>Edit Job</h1>
<form action="/edit-job/<%= job.id %>" method="POST">
    <div>
        <label for="title">Job Title</label>
        <input type="text" id="title" name="title" value="<%= job.title %>" required>
    </div>
    <div>
        <label for="description">Job Description</label>
        <textarea id="description" name="description" required><%= job.description %></textarea>
    </div>
    <div>
        <label for="company">Company Name</label>
        <input type="text" id="company" name="company" value="<%= job.company.display_name %>" required>
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" id="location" name="location" value="<%= job.location.display_name %>" required>
    </div>
    <button type="submit">Save Changes</button>
</form>
<%- include('partials/footer') %>